@section Scripts {
    <script>
        $(document).ready(function () {
            // obtém o valor da ViewBag e rola a página até a seção correspondente
            var scrollTo = '@ViewBag.ScrollTo';
            if (scrollTo) {
                $('html, body').animate({
                    scrollTop: $('#' + scrollTo).offset().top
                }, 1000);
            }
        });
    </script>
}


